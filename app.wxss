@import "/wxParse/wxParse.wxss";
page { font-size: 30rpx; }
.itemView { margin: 0 auto 20rpx auto; width: 690rpx;/*  height: 87rpx; line-height:87rpx;*/  }
text { font-family: Microsoft Yahei;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}
.text-align { text-align: center; }
.hide { display:none;}
.show { display: block;}
.warn-view { clear: both; margin: 0 auto; width: 688rpx; height: 61rpx; line-height:61rpx; text-align: left; }
.warn-view text { float: left; padding-left: 28rpx; color:#ff5f5f;}
 
/* 登陆页按钮样式 */
.button { background:#21a1f2; color: #fff;}
.button.button-hover {background: #7abff6;}

/* 注册页按钮样式 */
.message-view button { padding:0; height: 87rpx; line-height:87rpx;  background: #21a1f2; color:#fff; font-size:28rpx;}
.message-view .button-hover { background: #7abff6;}

.picker-view { z-index: 1; }
.store { padding-left:20rpx; margin:27rpx auto 0 auto; width:670rpx;  border: 1rpx solid #c6c6c6; border-radius: 3px; text-align: left;}
.store text { display:block; height:84rpx; line-height:84rpx; }

/* 弹出窗口*/
.modal-mask { width: 100%; height: 100%; position: fixed; top: 0; left: 0; background: rgba(0,0,0,.75); overflow: hidden; z-index: 10; color: #fff;}
.modal-content { padding-bottom: 43rpx; width: 592rpx;/*  height: 356rpx; */ overflow: hidden; position: fixed; top: 50%; left: 50%; z-index: 12; margin: -308rpx -286rpx; background:#fff;
  border:7px solid #dedede; border-radius:15rpx; }
.modal-title { padding: 80rpx 10rpx 0 10rpx; font-size: 36rpx; color: #030303; text-align: center;}


/* .modal-content { padding: 90rpx 10rpx 32rpx; text-align: center;} */
.modal-input { display: flex; background: #fff; border: 2rpx solid #ddd; border-radius: 4rpx; font-size: 28rpx;}
.input { width: 100%; height: 82rpx;  font-size: 28rpx; line-height: 28rpx; padding: 0 20rpx; box-sizing: border-box; color: #333;}
input-holder { color: #666; font-size: 28rpx;}
.modal-footer { margin-top: 50rpx; height: 86rpx; font-size: 34rpx; line-height: 86rpx; text-align: center; }
.btn-cancel { margin: 0 auto; display: block; width: 537rpx; color: #666; text-align: center; color:#fff; border-radius: 5px; background:#21a1f2; }
.btn-cancel.button-hover {background: #7abff6;}
.btn-confirm { width: 50%; color: #ec5300; text-align: center;} 