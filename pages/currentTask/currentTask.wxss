page { background: #f4f4f4; }
.swiper { width:100%; height: 430rpx; overflow: hidden;}
.swiper { position: relative;}
.slide-image { width:100%; height:100%;}
.task-progress,.canvasImg, .canvasImg2 { position: absolute;  top:35rpx; left:50%; transform: translateX(-50%); -webkit-transform: translateX(-50%); width: 283rpx; height: 283rpx; text-align:center; }
swiper-item { position:relative;}
.taskName { position: absolute; top: 328rpx; left:50%; transform: translateX(-50%); -webkit-transform: translateX(-50%); font-size:32rpx; font-weight: bold; color:#fff; }
.progressValue { display: block; margin-top: 85rpx; color:#ffe566; font-size: 63rpx; font-weight: bold; }
.progressTitle { display: block; margin-top: 20rpx; color:#ffe566; }
.swiper-arrow { position: absolute; top: 174rpx; z-index:2;}
.swiper-arrow image { width: 88rpx; height:88rpx; }
.swiper-left { left: 30rpx;  }
.swiper-right { right: 30rpx; }



.content { padding:0 28rpx; margin-bottom: 20rpx; background: #ffff; }
.title { position: relative; height: 87rpx; line-height: 87rpx; width: 100%; border-bottom: 1rpx solid #f4f4f4; color: #333; text-align: left; }
.inner-content { padding: 20rpx 0; }
.icon { position: absolute; top: 32rpx; display: block; height: 28rpx;  color:#21a0f2; border-left: 2px solid #21a0f2; overflow: hidden; }
.titleName { display: block; padding-left: 14rpx; font-size: 30rpx; }
.itemView.button { }
.message-view { position: fixed; bottom:0; left:0; padding-top:30rpx; width:100%; height:120rpx; background: #f4f4f4; }
.message-view button { padding:0; width:694rpx; background: #2396f1; color:#fff; font-size:28rpx;}
.message-view .button-hover { background: #76bbf2;}
.note { display:block; margin-top:10rpx; font-size:28rpx; color:#666; line-height:45rpx;  }
.modal-mask { text-align: center;  }
.load { position:absolute; left:50%; top:50%; margin-left:-55rpx; margin-top:-55rpx; width:110rpx; height:110rpx; z-index:20; }

.currentTask .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 5rpx;
}
.currentTask .wx-swiper-dot{
    width:20rpx;
    display: inline-flex;
    height: 20rpx;
    margin-left: 5px;
    justify-content:space-between;
}
.currentTask .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.6);
    border-radius: 20rpx
}
.currentTask .wx-swiper-dot-active::before{
    background:rgba(255,255,255,1);   
}